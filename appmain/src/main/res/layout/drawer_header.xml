<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="300dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:scaleType="fitCenter"/>


    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="12dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:foregroundGravity="center">

        <ImageView

            android:id="@+id/profile_image"
            android:src="@drawable/ic_profile_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            />

    </FrameLayout>

    <TextView
        android:layout_marginStart="24dp"
        android:id="@+id/tvName"
        android:textSize="18sp"
        android:text="Jitpakorn Rattanadilok na Buket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_above="@+id/tvWorkplace"

        />

    <TextView
        android:layout_marginStart="24dp"
        android:text="ภาควิชาเกษตรกลวิธาน"
        android:id="@+id/tvWorkplace"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:layout_alignParentBottom="true"

        android:src="@drawable/gradient_texthightlight"
        android:layout_width="match_parent"
        android:layout_height="100dp" />




</RelativeLayout>